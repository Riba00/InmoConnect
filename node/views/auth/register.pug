extends ../layout/index

block content 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Inmo
            span.font-normal Connect
        h2.text-center.text-2xl.font-extrabold= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg



        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="name") Name
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Name" type="text" name="name" value= user ? user.name : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="someone@someelse.com" type="email" name="email" value =user ? user.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="*******" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password_confirmation") Password Confirmation
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="*******" type="password" name="password_confirmation")

                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Already registered? Sign In
                        a.text-gray-500.text-xs(href="/auth/reset-password") Forgot your password?

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Create account")