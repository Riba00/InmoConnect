                span.font-normal Connect
        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden")
            a(href="/auth/register") Sign up
            a(class="" href="/auth/login") Log in

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categories/1" class="text-sm font-bold uppercase text-white") Houses
            a(href="/categories/2" class="text-sm font-bold uppercase text-white") Flats
            a(href="/categories/3" class="text-sm font-bold uppercase text-white") Garages
